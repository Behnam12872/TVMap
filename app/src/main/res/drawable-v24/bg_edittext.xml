<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true"  android:color="@color/black">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/light_blue"/>
        </shape>
    </item>
    <item android:state_focused="false" android:color="@color/black">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/light_green"/>
        </shape>
    </item>
    <item android:color="@color/black">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/light_green"/>
        </shape>
    </item>
</selector>